<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/date_performName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연극제목"
        android:fontFamily="@font/cafe24oneprettynight"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20pt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/theater_title"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="극장"

            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theart_addr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:paddingLeft="40dp"

            android:text="극장표시" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="날짜"

            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="날짜 표시"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAlignment="center"
            android:textSize="8pt" />

        <Button
            android:id="@+id/calender"
            android:layout_width="70dp"
            android:layout_height="72dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:gravity="center"
            android:text="달력"
            app:backgroundTint="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_title"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"

            android:fontFamily="@font/cafe24oneprettynight"
            android:text="가격"
            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_theater"
            android:layout_width="match_parent"
            android:paddingLeft="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"

            android:text="가격 표시" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="시간"
            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="시간 표시"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAlignment="center"
            android:textSize="8pt" />

        <Button
            android:id="@+id/time_selector"
            android:layout_width="70dp"
            android:layout_height="72dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:gravity="center"
            android:text="시간"
            app:backgroundTint="@color/blue" />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seat_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="좌석"
            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seat"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="좌석 표시"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAlignment="center"
            android:textSize="8pt" />

        <Button
            android:id="@+id/select_seat"
            android:layout_width="70dp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:text="좌석 선택"
            android:fontFamily="@font/cafe24oneprettynight"
            app:backgroundTint="@color/blue" />



    </LinearLayout>

    <Button
        android:text="예약"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/btn_book"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
         />


</LinearLayout>