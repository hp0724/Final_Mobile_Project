<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_mainTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/line_textview"
        android:textStyle="bold"
        android:fontFamily="@font/cafe24oneprettynight"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="마음에 드는 공연을  찾아보세요!"
        android:textColor="#2B2B2B"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/first_join"
        android:layout_width="176dp"
        android:layout_height="68dp"
        android:layout_marginBottom="136dp"
        android:text="회원가입"
        android:background="@drawable/custom_button"
        android:textStyle="bold"
        android:fontFamily="@font/cafe24oneprettynight"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:backgroundTint="@color/blue2"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/first_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_mainTitle"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/first_login"
        android:layout_width="176dp"
        android:layout_height="68dp"
        android:layout_marginBottom="136dp"
        android:text="로그인"
        android:background="@drawable/custom_button"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:backgroundTint="@color/blue2"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/first_join"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mainTitle"
        app:layout_constraintVertical_bias="1.0"
        android:textStyle="bold"
        android:fontFamily="@font/cafe24oneprettynight"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp" />
</androidx.constraintlayout.widget.ConstraintLayout>