<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/myBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약 확인 "
        android:fontFamily="@font/cafe24oneprettynight"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20pt"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myBook_performName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text=" 이름 "

            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myBook_performName_name"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="8pt"
            android:text="공연 이름 표시"
            android:fontFamily="@font/cafe24oneprettynight"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myBook_theater_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="극장"

            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myBook_theart_addr"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="8pt"

            android:text="극장표시" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myBook_date_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="날짜"

            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myBook_date"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="8pt"
            android:text="날짜 표시"
            android:fontFamily="@font/cafe24oneprettynight"

             />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myBook_price_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"

            android:fontFamily="@font/cafe24oneprettynight"
            android:text="가격"
            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myBook_price_theater"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="8pt"

            android:text="가격 표시" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myBook_time_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="시간"
            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myBook_time"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="시간 표시"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAlignment="center"
            android:textSize="8pt" />



    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myBook_seat_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="좌석"
            android:textAlignment="center"
            android:textSize="10pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myBook_seat"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="좌석 표시"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textAlignment="center"
            android:textSize="8pt" />




    </LinearLayout>

    <Button
        android:text="뒤로가기"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/back_but"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />


</LinearLayout>